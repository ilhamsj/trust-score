# Application Configuration
APP_DEBUG=false
APP_NAME=Trust Score
APP_URL=http://localhost:3000
APP_SECRET=your-secret-key-here

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=root
DATABASE_URI=mongodb://root:root@mongo:27017/trust-score

# SMTP Configuration
# 
# Local Development (Mailpit on port 587 with STARTTLS + auth)
# Matches production setup exactly!
SMTP_HOST=mailpit
SMTP_PORT=587
SMTP_USER=root
SMTP_PASS=root
SMTP_SECURE=false
SMTP_IGNORE_TLS=false
SMTP_FROM_ADDRESS=noreply@example.com
SMTP_FROM_NAME=Trust Score
# 
# Production (Port 587 with STARTTLS)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_SECURE=false
# SMTP_IGNORE_TLS=false
# SMTP_FROM_ADDRESS=noreply@example.com
# SMTP_FROM_NAME=Trust Score

# Production Alternative (Port 465 with SSL)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=465
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_SECURE=true
# SMTP_IGNORE_TLS=false

# Google OAuth (if needed)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Jobs Configuration
JOBS_DELETE_ON_COMPLETE=false
